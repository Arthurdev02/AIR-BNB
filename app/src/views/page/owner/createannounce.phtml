<h1>Formulaire d'Ajout de Logement</h1>
<form action="#" method="post">
    <!-- Nom -->
    <label for="name">Nom du logement :</label>
    <input type="text" id="name" name="name" placeholder="Ex : Studio Parisien" required>

    <!-- Adresse -->
    <label for="country"> Pays :</label>
    <input type="text" id="country" name="country" placeholder="Entrez le pays" required>

    <label for="city"> Ville :</label>
    <input type="text" id="city" name="city" placeholder="Entrez la ville" required>

    <!-- Description -->
    <label for="description">Description :</label>
    <textarea id="description" name="description" rows="4" placeholder="Décrivez le logement..."></textarea>

    <!-- Prix -->
    <label for="price">Prix (en €) :</label>
    <input type="number" id="price" name="price" placeholder="Ex : 500" min="0" required>

    <!-- Taille -->
    <label for="size">Taille (en m²) :</label>
    <input type="number" id="size" name="size" placeholder="Ex : 75" min="0" required>

    <!-- Type de logement -->
    <label for="housingType">Type de logement :</label>
    <select id="housingType" name="housingType" required>
        <option value="logement_entier">Logement entier</option>
        <option value="chambre_privee">Chambre privée</option>
        <option value="chambre_partagee">Chambre partagée</option>
    </select>

    <!-- Couchages -->
    <label for="beds">Nombre de couchages :</label>
    <input type="number" id="beds" name="beds" placeholder="Ex : 2" min="0" required>

    <label>Équipements :</label>
    <div class="checkbox-group">
        <label><input type="checkbox" name="equipments" value="wifi"> Wi-Fi</label>
        <label><input type="checkbox" name="equipments" value="machine_laver"> Machine à laver</label>
        <label><input type="checkbox" name="equipments" value="grille_pain"> Grille-pain</label>
        <label><input type="checkbox" name="equipments" value="climatisation"> Climatisation</label>
        <label><input type="checkbox" name="equipments" value="television"> Télévision</label>
        <label><input type="checkbox" name="equipments" value="cuisine"> Cuisine équipée</label>
    </div>
    <!-- Soumettre -->
    <button type="submit">Envoyer</button>
</form>
</body>

</html>